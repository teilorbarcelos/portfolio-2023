{
  "name": "boilerplate-nextjs",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --coverageReporters=text",
    "test:ci:watch": "jest --watch --coverage --coverageReporters=text",
    "editorconfig": "editorconfig-checker",
    "postinstall": "husky install",
    "json-server": "json-server --watch ./src/mocks/jsonServer/static-props-mock.json --port 3001"
  },
  "lint-staged": {
    "*.js,*.jsx,*.ts,*.tsx": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,json,md,css,html,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.4",
    "next": "13.2.4",
    "postcss": "^8.4.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use": "^17.4.0",
    "styled-components": "^5.3.9",
    "tailwindcss": "^3.3.0",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@next/eslint-plugin-next": "^13.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.0",
    "@types/node": "18.15.3",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/styled-components": "^5.1.26",
    "@types/tailwindcss": "^3.1.0",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "editorconfig-checker": "^5.0.1",
    "editorconfig-cli": "^0.3.0",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "json-server": "^0.17.3",
    "lint-staged": "^13.2.0",
    "msw": "^1.1.0",
    "node-mocks-http": "^1.12.2",
    "typescript": "5.0.2"
  }
}
